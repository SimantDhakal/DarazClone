<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".activity.LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:background="@drawable/laz_img_login_top_header"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Password"
            android:textColor="#ff3a14"
            android:textSize="16dp"
            android:layout_marginTop="25dp"
            android:textAlignment="center"/>

        <View
            android:layout_width="80dp"
            android:layout_height="2dp"
            android:background="#ff3a14"
            android:layout_gravity="center"
            android:layout_marginTop="4dp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_category"
            card_view:cardCornerRadius="5dp"
            card_view:cardElevation="1dp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            card_view:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textColor"
                    android:textSize="12dp"
                    android:text="Mobile Number/Email"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="7dp"
                    android:orientation="horizontal">

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="Phone number"
                        android:textSize="12dp"
                        android:layout_gravity="center"
                        android:textColor="@color/textColor"
                        android:layout_weight="1"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="4dp"
                        android:background="#00000000"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#cccccc"/>

                <!-- SMS code -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:textSize="12dp"
                    android:textColor="@color/textColor"
                    android:text="Password"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="7dp"
                    android:orientation="horizontal">

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="12dp"
                        android:layout_gravity="center"
                        android:textColor="@color/textColor"
                        android:layout_marginTop="4dp"
                        android:background="#00000000"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="20dp"
                    android:background="#cccccc"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Forget Password?"
                    android:textAlignment="textEnd"
                    android:paddingTop="7dp"
                    android:paddingBottom="7dp"
                    android:textColor="@color/colorFacebook"
                    android:textSize="12dp"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Login"
                    android:textSize="13dp"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center"
                    android:background="@drawable/create_account_button"
                    android:textColor="@color/colorWhite"
                    android:paddingLeft="60dp"
                    android:paddingRight="60dp"/>


            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CERATE AN ACCOUNT"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:textAlignment="textEnd"
            android:paddingTop="7dp"
            android:paddingBottom="7dp"
            android:textColor="@color/colorFacebook"
            android:textSize="12dp"/>

        <!-- login factor -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp"
            android:layout_gravity="center"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Connect With Other Ways"
                android:textColor="@color/textColor"
                android:padding="10dp"
                android:textSize="12dp"
                android:textAlignment="center"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btnFacebook"
                    android:layout_weight="1"
                    android:background="@drawable/button_facebook"
                    android:layout_marginRight="6dp"
                    android:textColor="@color/colorWhite"
                    android:textAllCaps="false"
                    android:textSize="13dp"
                    android:textStyle="bold"
                    android:text="Facebook"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btnGoogle"
                    android:layout_weight="1"
                    android:background="@drawable/button_google"
                    android:layout_marginLeft="6dp"
                    android:textColor="@color/colorWhite"
                    android:textAllCaps="false"
                    android:textSize="13dp"
                    android:textStyle="bold"
                    android:text="Google"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>